<% if user_signed_in? %>
  <div class="search_form">
    <table align="center">
      <tr>
        <%= form_with url: tagsearches_search_path, method: :get, local: true do |f| %>
        <td><%= f.text_field :content %></td>
        <td><%= f.submit 'タグ検索' %></td>
        <% end %>
      </tr>
    </table>
  </div>
<% end %>